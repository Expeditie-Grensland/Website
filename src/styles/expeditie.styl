html, body
  height 100vh
  width 100vw
  margin 0
  padding 0
  overflow hidden
  box-sizing border-box

*
  box-sizing inherit

body
  display flex

#map
  width: 100%
  height: 100%
  vertical-align: top

.mapboxgl-ctrl-bottom-right div, div a
  user-select none !important

#loadingBar
  position absolute
  top 0
  left 35%
  font-size 1em
  background-color #F0E68C
  text-align: center


#loadingText
  display: inline-block;
  height 100%
  vertical-align middle


.loadingSpinner
  height 1em
  width auto
  vertical-align middle


// ---------- Story ----------

#storyWrapper
  position absolute
  width 35%
  height 100%
  scrollbar-width none
  padding 16px
  overflow-y auto

#storyTitle
  margin-bottom 16px

#storyTitle h1
  margin 0

#storyTitle .subtitle
  color #404040
  margin 0 0 8px 0

#story
  display flex

#graph
  min-width 150px
  display inline-block
  flex 0 0 auto
  padding 0


#storyElements
  margin-left 16px

.storyElement
  margin-bottom 16px

.storyElement h1
  margin 0

.storyElement .time
  position absolute
  right 16px
  top 24px
  margin 0
  font-size .7em

.storyElement .people
  margin-top 0
  font-size .7em

.card
  position relative
  background-color #f5f5f5e6
  box-shadow 0 4px 8px 0 rgba(0,0,0,0.2)
  border-radius 5px
  padding 16px
