@import "main"

$bgColor = #333
$fgColor = #fafafa

html, body
  background-color: $bgColor
  color: $fgColor
  text-align: center

.row
  padding-bottom: 3rem

  &:first-child
    padding-top: 5rem

.img-large
  margin-bottom: 3rem

.img-small
  margin-bottom: 2rem

.img-large, .img-small
  width: 100%
  height: 0
  background-size: cover
  background-repeat: no-repeat
  background-position: center
  overflow: hidden
  position: relative
  padding-bottom: 65%
  box-shadow: 0 0 30px -10px #000

.embed-responsive
  box-shadow: 0 0 30px -10px #000

a.img-large, a.img-small
  display: block
  color: inherit
  text-decoration: inherit

  &:hover
    color: inherit
    text-decoration: inherit

  @media (hover: hover)
    .img-inner
      top: 0
      height: 100%
      opacity: 0
      transition: opacity .3s ease 0s

      &:hover, &.hover
        opacity: 1

.img-inner
  display: table
  position: absolute
  bottom: 0
  left: 0
  right: 0
  width: 100%

  background-color: rgba(0, 0, 0, .45)
  text-shadow: 0 0 .75em #000

.img-inner2
  display: table-cell
  vertical-align: middle
  text-align: center
  padding: 5%

.text-title, .text-subtitle
  font-weight: 400
  line-height: 1.2

.text-title
  font-size: 2rem

.text-subtitle
  font-size: 1.2rem

.img-large
  padding-bottom: 85%

  @media (min-width: 768px)
    padding-bottom: 40%

    .text-title
      font-size: 3rem

    .text-subtitle
      font-size: 1.6rem

.smallerimgs
  margin-bottom: 1.5em

.midtitle
  font-size: 1.4rem

.btn-kaart
  margin-bottom: 1rem
  color: $fgColor
  background-color: transparent
  border-color: $fgColor

  &:focus
    box-shadow: 0 0 0 0.2rem rgba(250, 250, 250, .5)

  &:hover, &:active
    color: $bgColor
    background-color: $fgColor

.leden
  margin-bottom: 5rem

  @media (min-width: 768px)
    margin-bottom: 0
    text-align: right
