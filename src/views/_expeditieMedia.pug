mixin filePlayer(file)
    if file
        case file.split(".").pop()
            when "audio"
                audio.mw-100(controls preload="none")
                    source(src=getFileUrl(file, "audio.mp3") type="audio/mpeg")
            when "video"
                video.mw-100(controls preload="none" poster=getFileUrl(file, "poster.jpg"))
                    source(src=getFileUrl(file, "1080p30.mp4") type="video/mp4")
            when "afbeelding"
                img(src=getFileUrl(file, "normaal.jpg"))
