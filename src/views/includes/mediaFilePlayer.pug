mixin mediaFilePlayer(mediaFile)
    if(mediaFile)
        if(mediaFile.mime === 'audio/mpeg')
            audio(src=getFileUrl(mediaFile) type=mediaFile.mime id=`player:${simple}`)
            span (
            a.media(href=`#play:${simple}`) afspelen
            span )
        if (mediaFile.mime === 'video/mp4')
            span (
            a.media(href=`#play:${simple}`) afspelen
            span )
            video(controls id=`player:${simple}` style="display: none;")
                source(src=getFileUrl(mediaFile) type=mediaFile.mime)
