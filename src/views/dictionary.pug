extends main
include includes/mediaFilePlayer

block title
    title Expeditie - Woordenboek

append scripts
    script(src="/static/scripts/dictionary.js")

append styles
    link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Libre+Baskerville:400,700&subset=latin-ext')
    link(rel="stylesheet" href="/static/styles/dictionary.css")

    meta(name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no')

//- TODO: Introductie toevoegen

block body
    h1
        span Het Grote Woordenboek der Expediets&#32;
        span.edition Eerste Editie

    dl
        each word in dictionary
            - simple = generateSimple(word.word);
            dt(id=simple)
                span.word #{word.word}&#32;
                if(word.phonetic)
                    span.phon [#{word.phonetic}]
                    span.word &#32;
                +mediaFilePlayer(word.mediaFile)

            dd
                ol
                    each definition, index in word.definitions
                        li
                            span.index #{index + 1}.&#32;
                            span.def !{marked(definition)}
