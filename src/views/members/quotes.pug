extends ../main
include ../includes/mediaFilePlayer

block title
    title Expeditie - Citaten

append scripts
    script(src="/static/scripts/dictionary.js")

append styles
    link(rel="stylesheet" href="/static/styles/dictionary.css")

//- TODO: Introductie toevoegen

block body
    h1
        span De Lange Citatenlijst der Expeditie Grensland&#32;
        span.edition Eerste Editie

    dl
        each quote in quotes
            - simple = generateSimple(quote.quote);
            dt(id=simple)
                span.word &ldquo;#{quote.quote}&rdquo;&#32;
                span.quotee &#8213;&nbsp;#{quote.quotee}
                span.word &#32;
                +mediaFilePlayer(quote.mediaFile)
            dd
                span.def !{marked(quote.context)}
