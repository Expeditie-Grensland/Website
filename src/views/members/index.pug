extends _frame

block title
    title Expeditie - Leden

block content
    .row
        each link in links
            if (link.href) || (link.adminHref && user.type == "admin")
                .col-12.col-md-6.col-lg-4
                    .card.mb-3
                        .card-body
                            h5.card-title= link.title
                            p.card-text= link.text
                            if link.href
                                a.card-link(href=link.href target=(link.target || false)) Open
                            if link.adminHref && user.type == "admin"
                                a.card-link(href=link.adminHref) Admin
    if (user.type == "admin")
        .row.mt-3
            span.members-very-light Versie: #{version}
