@import "main"

body
  margin 0
  padding 0
  height 100%
  overflow hidden
  white-space nowrap
  text-align center


#columns
  display: flex

.column
  position: relative
  height: 100vh
  flex-grow: 1

  transition flex-grow 500ms cubic-bezier(0.075, 0.82, 0.165, 1)

.column:hover
  flex-grow: 1.2

.background
  width inherit
  height inherit
  background-size auto 100%
  background-repeat no-repeat
  filter brightness(0.8)
  transition inherit
  overflow hidden

.expeditie
  display block
  position absolute
  height auto
  top 14%
  width 100%
  overflow hidden

  h1, h2
    color white
    overflow hidden

.links
  display flex
  flex-direction column
  justify-content: flex-end
  align-items: center
  position absolute
  bottom 20%
  height 0
  width 100%

  transition height 300ms cubic-bezier(0.075, 0.82, 0.165, 1)
  overflow hidden

.column:hover .links
  height: 100%

.link
  cursor pointer
  height auto
  width 51%
  margin-bottom 5px
  overflow hidden

.hidden
  display none

#svgmap
  display block
  height 100%
  width auto
  max-width 100%
  margin auto
  stroke-width .3px
  fill #f2f2f2
  fill-rule evenodd
  stroke #000
  stroke-linejoin round


a.arrow
  position: fixed
  border: solid black;
  border-width: 0 4px 4px 0;
  display: inline-block;
  padding: 6px;
  top: 50%
  cursor: pointer


.right
  right: 30px
  z-index: 100
  transform: rotate(-45deg) scale(2)


.left
  left: 30px
  z-index: 100
  transform: rotate(135deg) scale(2)

.grey
  border-color: grey !important
  cursor: default !important
