html, body, .columns, .slick-list, .slick-track, .slick-slider
  height: 100%

.slick-dots
  bottom: 10px

.slick-dots li button:before
  color white
  opacity .9
  font-size 8px
  width 20px
  height 20px

.slick-dots li.slick-active button:before
  font-size 15px
  color white
  opacity 1

.slick-prev
  left: 30px
  z-index: 10

.slick-next
  right: 30px