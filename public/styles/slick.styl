html, body, .columns, .slick-list, .slick-track, .slick-slider
  height: 100%

.slick-dots
  bottom: 10px

  li button:before
    color white
    opacity 0.9
    font-size 8px
    width 20px
    height 20px

  li.slick-active button:before
    font-size 15px
    color white
    opacity 1

.slick-prev
  left: 30px
  z-index: 10

.slick-next
  right: 30px