

body
  margin 0
  padding 0
  height 100%
  max-height 100vh
  overflow hidden
  font-family 'Roboto', sans-serif
  white-space nowrap
  text-align center

.column
  display inline-block
  position relative
  width 480px
  overflow auto
  white-space normal
  background-size auto 100%
  background-repeat no-repeat

  -webkit-transition: filter 2s opacity 1s
  -moz-transition: filter 2s opacity 1s
  -ms-transition: filter 2s opacity 1s
  -o-transition: filter 2s opacity 1s
  transition: filter 2s opacity 1s

.expeditie
  position absolute
  bottom 10%
  width inherit
  background-color: rgba(66, 66, 66, 0.5)

  h1, h2
    color: white

.column:not(.slick-current)
  opacity: .6
  -webkit-filter: blur(1px);
  -moz-filter: blur(1px);
  -o-filter: blur(1px);
  -ms-filter: blur(1px);
  filter: blur(1px);

.slick-current
  opacity: 1
  -webkit-filter: blur(0px)
  -moz-filter: blur(0px)
  -o-filter: blur(0px)
  -ms-filter: blur(0px)
  filter: blur(0px)

//.slick-current:hover .expeditie


.slick-slide
  height: 100vh

.slick-prev
  left: 30px
  z-index: 10

.slick-next
  right: 30px

.slick-dots
  bottom: 10px

.slick-dots li button:before
  color white
  opacity 1
