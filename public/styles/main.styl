column-width=480

transition()
  -webkit-transition arguments
  -moz-transition arguments
  -ms-transition arguments
  -o-transition arguments
  transition arguments
  
filter()
  -webkit-filter arguments
  -moz-filter arguments
  -o-filter arguments
  -ms-filter arguments
  filter arguments

body
  margin 0
  padding 0
  height 100%
  max-height 100vh
  overflow hidden
  font-family 'Roboto', sans-serif
  white-space nowrap
  text-align center

.column
  display inline-block
  position relative
  width 33.33333vw
  min-width column-width px
  overflow hidden
  white-space normal
  background-size auto 100%
  background-repeat no-repeat

  transition filter 1s

.expeditie
  display block
  position absolute
  height auto
  bottom 10%
  width inherit
  min-width inherit
  background-color: rgba(66, 66, 66, 0.5)

  min-height 0

  transition bottom 1s ease .1s, min-height .8s, background-color 1s

  .expeditie-text
    color: white

.slick-current .expeditie:hover
  min-height: 90%
  bottom: 0
  background-color: rgba(66, 66, 66, 0.8)

.slick-slide:not(.slick-current)
  filter contrast(1.25) brightness(0.4) saturate(1.25)

.slick-current
  filter none

.slick-current .expeditie
  cursor pointer

.column, .slick-slide
  height: 100vh

.slick-dots
  bottom: 10px

.slick-dots li button:before
  color white
  opacity 1
  font-size 8px

.slick-dots li
  color dimgrey !important
  width 20px !important
  height 20px !important