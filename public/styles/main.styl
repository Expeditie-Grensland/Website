header-height = 0px
footer-height = 0px

body
  margin:0
  padding:0
  height: 100vh
  width: 100vw
  font-family: 'Roboto', sans-serif;

#header
  position: absolute
  top: 0
  left: 0
  right: 0
  height: header-height
  background-color: #5f5f5f

#content
  position: absolute
  top: header-height
  bottom: footer-height
  overflow: hidden

#footer
  position: absolute
  bottom: 0
  left: 0
  right: 0
  height: footer-height