

body
  margin 0
  padding 0
  height 100%
  max-height 100vh
  overflow hidden
  font-family 'Roboto', sans-serif
  white-space nowrap
  text-align center

.column
  display inline-block
  position relative
  //left 0
  width 480px
  overflow auto
  white-space normal
  background-size auto 100%
  background-repeat no-repeat
  transition: filter 2s, opacity 1s

.expeditie
  position absolute
  bottom 10%
  width inherit

//#columns:hover .column
.column:not(.slick-current)
  opacity: .6
  -webkit-filter: blur(1px);
  -moz-filter: blur(1px);
  -o-filter: blur(1px);
  -ms-filter: blur(1px);
  filter: blur(1px);

//#columns:hover .column:hover
.slick-current
  //-webkit-mask-image: -webkit-gradient(linear, left top, left bottom, from(rgba(0,0,0,1)), to(rgba(0,0,0,0)));
  opacity: 1
  -webkit-filter: blur(0px)
  -moz-filter: blur(0px)
  -o-filter: blur(0px)
  -ms-filter: blur(0px)
  filter: blur(0px)

.slick-slide
  height: 100vh

.slick-prev
  left: 30px
  top: 50%
  z-index: 10

.slick-next
  right: 30px
  top: 50%