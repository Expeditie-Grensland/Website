html, body, .columns, .slick-list, .slick-track, .slick-slider
  height: 100%

.column
  width: 100vw
  height: inherit

.column:not(.slick-current)
  opacity: 1
  -webkit-filter: blur(0px);
  -moz-filter: blur(0px);
  -o-filter: blur(0px);
  -ms-filter: blur(0px);
  filter: blur(0px);

.slick-prev
  left: 30px
  z-index: 10

.slick-next
  right: 30px