extend structure/simple.pug

block title
    title Expeditie #{expeditie.name}

block styles
    include includes/styles.pug
    link(rel="stylesheet" href="https://api.tiles.mapbox.com/mapbox-gl-js/v0.41.0/mapbox-gl.css")

    link(rel="stylesheet" href="/styles-dist/expeditie.css")

    meta(name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no')

block scripts
    include includes/scripts.pug
    script(src="https://api.tiles.mapbox.com/mapbox-gl-js/v0.41.0/mapbox-gl.js")
    script(src='https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-language/v0.9.2/mapbox-gl-language.js')

    script.
        var expeditieNameShort = "!{expeditie.nameShort}"

    script(src='/scripts-dist/map/loadingBar.js')
    script(src='/scripts-dist/map/mapHandler.js')
    script(src='/scripts-dist/sockets/sockets.js')
    script(src='/scripts-dist/sockets/socketHandler.js')
    script(src='/scripts-dist/database/tables.js')
    script(src="/scripts-dist/expeditie.js")

block body
    #map
    #loadingBar
        include includes/loadSpinner
        #loadingText &nbsp;Loading...
